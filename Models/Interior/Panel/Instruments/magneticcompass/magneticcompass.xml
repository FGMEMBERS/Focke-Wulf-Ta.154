<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

 <path>magneticcompass.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>fond</object-name>
    <object-name>visses</object-name>
    <object-name>face</object-name>
    <object-name>barre</object-name>
    <object-name>Ball</object-name>

    <!-- Objets transparents -->
    <object-name>vitre</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/Focke-Wulf-Ta.154/Models/Effects/Glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>
  
  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>barre</object-name>
    <object-name>Ball</object-name>
    <emission>
      <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Ball</object-name>
    <property>instrumentation/magnetic-compass/indicated-heading-deg</property>
    <center>
     <x-m> -0.01 </x-m>
     <y-m>  0.00 </y-m>
     <z-m>  0.00 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Ball</object-name>
    <property>instrumentation/attitude-indicator/internal-pitch-deg</property>
    <center>
     <x-m> -0.01 </x-m>
     <y-m>  0.00 </y-m>
     <z-m>  0.00 </z-m>
    </center>
    <axis>
     <x> 0 </x>
     <y> 0 </y>
     <z> 1 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Ball</object-name>
    <property>instrumentation/attitude-indicator/internal-roll-deg</property>
    <center>
      <x-m> -0.01 </x-m>
      <y-m>  0.00 </y-m>
      <z-m>  0.00 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>
